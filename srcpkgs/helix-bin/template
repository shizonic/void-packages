# Template file for 'helix-bin'
pkgname=helix-bin
version=0.2.1
revision=1
archs="x86_64"
wrksrc="helix-v${version}-x86_64-linux"
short_desc="Kakoune / neovim inspired editor, written in Rust"
maintainer="shizonic <realtiaz@gmail.com>"
license="MPL-2.0"
homepage="https://helix-editor.com/"
distfiles="https://github.com/helix-editor/helix/releases/download/v${version}/helix-v${version}-x86_64-linux.tar.xz"
checksum=be89c95f614afd4690af1d6b9f7626eb97bc4a7983746085b9dfd56e4aa4b33e

do_install() {
	vmkdir usr/lib/helix
	vcopy runtime usr/lib/helix/
	vcopy hx usr/lib/helix
	vbin ${FILESDIR}/hx
}
